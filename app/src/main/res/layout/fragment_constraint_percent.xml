<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text='app:layout_constraintHeight_percent="0.2"'
            app:layout_constraintHeight_percent="0.2"
            android:background="#823"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="12sp"
            android:text='Height_percent="0.2"\nWidth_percent="0.4"'

            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.2"
            android:background="#828"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            />
    <TextView
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="12sp"
            android:text='Height_percent="0.2"\nWidth_percent="0.5"'

            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.2"
            android:background="#294"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            />
</androidx.constraintlayout.widget.ConstraintLayout>